{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd serverless-functions && npm ci && npm run build"
  },
  "deploy": {
    "startCommand": "cd serverless-functions && npm run start:prod",
    "healthcheckPath": "/healthcheck",
    "healthcheckTimeout": 100,
   // railway.json
   {
     // ...
     "build": {
       "builder": "NIXPACKS",
       // Potentially:
       "buildCommand": "cd serverless-functions && npm ci --no-optional && npm run build" 
     },
     // ...
   } "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}