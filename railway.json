{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci --no-optional && cd serverless-functions && npm ci --no-optional && npm run build"
  },
  "deploy": {
    "startCommand": "cd serverless-functions && npm run start:prod",
    "healthcheckPath": "/healthcheck",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}